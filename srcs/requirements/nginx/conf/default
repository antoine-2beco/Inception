server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name ade-beco.42.fr www.ade-beco.42.fr;

	ssl_certificate $CERTS;
	ssl_certificate_key $KEY_CERTS;
	ssl_protcol TLSv1.3;

	# Wordpress root
	root /var/www/html;
	index index.php index.html index.htm;

	# Page de test Nginx (accessible Ã  /nginx-test.html)
    location = /nginx-test.html {
        alias /usr/share/nginx/html/test.html;
    }

	# Handling Wordpress requests
	location / {
		try_files $uri $uri/ /index.php$is_args$args;
	}

	# Config PHP-FPM for Wordpress
	location ~ /.php$ {
        include fastcgi_params;
		fastcgi_pass wordpress:9000;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_index index.php
	}

	# Forbid access to hided files
	location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

	# Forbid sensible Wordpress file
	location ~ ^/(wp-config\.php|readme\.html|license\.txt) {
        deny all;
    }
}
